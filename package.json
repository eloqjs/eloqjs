{
  "name": "eloqjs",
  "private": true,
  "repository": "github:eloqjs/eloqjs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build && yarn run docs",
    "docs": "scripty",
    "watch": "lerna run watch --stream --no-sort",
    "compile:types": "lerna run compile:types",
    "lint": "lerna run lint --no-bail",
    "test": "lerna run test",
    "coverage": "lerna run coverage",
    "release:canary": "lerna publish --canary --preid dev --pre-dist-tag dev --exact --force-publish='*' --no-push --no-git-tag-version --no-changelog --no-verify-access --yes"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.17.0",
    "@microsoft/api-extractor": "^7.20.0",
    "@microsoft/tsdoc": "^0.13.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fs-extra": "^10.0.1",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "scripty": "^2.0.0",
    "siroc": "^0.16.0",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
